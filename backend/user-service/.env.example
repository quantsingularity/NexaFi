# NexaFi User Service Environment Variables

# Flask Secret Key for session management and token signing
# MUST be a long, random, and complex string
SECRET_KEY=your_very_long_and_secret_key_here

# Database URL (e.g., PostgreSQL, SQLite)
# Example for SQLite: sqlite:///./data/users.db
# Example for PostgreSQL: postgresql://user:password@host:port/dbname
DATABASE_URL=sqlite:///./data/users.db

# Debug mode (True/False). Set to False in production.
DEBUG=True

# Host and Port for the service
HOST=0.0.0.0
PORT=5000
