# Terraform S3 Backend Configuration
# Copy this file to backend-config.tfvars and fill in your values
# Usage: terraform init -backend-config=backend-config.tfvars

bucket         = "nexafi-terraform-state-ENVIRONMENT"
key            = "infrastructure/terraform.tfstate"
region         = "us-west-2"
encrypt        = true
dynamodb_table = "nexafi-terraform-locks"

# Optional: Configure state locking timeout
# lock_timeout   = "5m"

# Optional: For role assumption
# role_arn       = "arn:aws:iam::ACCOUNT-ID:role/TerraformRole"
# session_name   = "terraform"
